<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.game.wordgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"/>
    
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>"

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:persistent="true">
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
        <activity android:name="MainMenu" android:screenOrientation="landscape"></activity>
        <activity android:screenOrientation="landscape" android:name="Play"></activity>
        <activity android:screenOrientation="landscape" android:name="Register"></activity>
        <activity android:screenOrientation="landscape" android:name="Leaderboard"></activity>
        <activity android:screenOrientation="landscape" android:name="Login"></activity>
        <activity android:screenOrientation="landscape" android:name="PickCard"></activity>
        <activity android:screenOrientation="landscape" android:name="ExitResume"></activity>
        <activity android:screenOrientation="landscape" android:name="GameWon"></activity>
        <activity android:screenOrientation="landscape" android:name="WrongDeclare"></activity>
        <activity android:name="Build" android:screenOrientation="landscape"></activity>
        <activity android:name="BuildFor4Set" android:screenOrientation="landscape"></activity>
        <activity android:name="BuildFor5Set" android:screenOrientation="landscape"></activity>
        <activity android:screenOrientation="landscape" android:name="Settings"></activity>
        <activity android:screenOrientation="landscape" android:name="com.test.game.wordgame.Resume"></activity>
        <activity android:screenOrientation="landscape" android:name="TestActivity"></activity>
        <activity android:screenOrientation="landscape" android:name="ResumeListView"></activity>  
        <activity android:screenOrientation="landscape" android:name="Manual_Shuffled"></activity>  
    </application>

</manifest>
