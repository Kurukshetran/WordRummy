<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?pageBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/userimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

    </FrameLayout>

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/frameLayout1"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="numberPassword"
        android:password="true">"

        <requestFocus />
    </EditText>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginPassword"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/loginPassword"
        android:layout_below="@+id/loginPassword" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center" >

            <Button
                android:id="@+id/x1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#cccccc"
                android:tag="1"
                android:text="1"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="2"
                android:text="2"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="3"
                android:text="3"
                android:textColor="#000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="55dp"
            android:gravity="center" >

            <Button
                android:id="@+id/x4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#cccccc"
                android:tag="4"
                android:text="4"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="5"
                android:text="5"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="6"
                android:text="6"
                android:textColor="#000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="110dp"
            android:gravity="center" >

            <Button
                android:id="@+id/x7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#cccccc"
                android:tag="7"
                android:text="7"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="8"
                android:text="8"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="9"
                android:text="9"
                android:textColor="#000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="165dp"
            android:gravity="center" >

            <Button
                android:id="@+id/xE"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#cccccc"
                android:tag="E"
                android:text="E"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/x0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="0"
                android:text="0"
                android:textColor="#000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/xBackspace"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="#cccccc"
                android:tag="back"
                android:text="B"
                android:textColor="#000"
                android:textStyle="bold" />
        </TableRow>
    </RelativeLayout>

    <ImageView
        android:id="@+id/errorImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/relativeLayout1"
        android:layout_toRightOf="@+id/loginPassword" />

    <TextView
        android:id="@+id/login_user"
        style="?text_view_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/loginPassword"
        android:gravity="center"
        android:text="Player Name" />

</RelativeLayout>